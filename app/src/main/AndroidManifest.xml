<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="example.com.materialsample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TabsActivity"
            android:label="Tabs"/>
        <activity
            android:name=".activities.TextInputLayoutActivity"
            android:label="Text Input"/>
        <activity
            android:name=".activities.SelectionControlsActivity"
            android:label="Selection Controls"/>
        <activity
            android:name=".activities.PickersActivity"
            android:label="Pickers"/>
        <activity
            android:name=".activities.BottomSheetActivity"
            android:label="Bottom Sheet"/>
        <activity
            android:name=".activities.BottomNavigationActivity"
            android:label="Bottom Sheet"/>
        <activity
            android:name=".activities.FocusActivity"
            android:label="Focus Sample"/>
    </application>

</manifest>